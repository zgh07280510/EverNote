<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="#fcfbfb"
    android:layout_margin="5dp">
    <TextView
        android:id="@+id/note_book_chose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="笔记本选项"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:id="@+id/note_book_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="共享"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:id="@+id/note_book_offline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="离线保存"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:id="@+id/note_book_rename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="重新命名笔记本"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:id="@+id/note_book_move"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="移动到到新的笔记本组"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:id="@+id/note_book_insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加到快捷方式"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:id="@+id/note_book_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"/>

</LinearLayout>