<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_home_activtiy">


    <com.lanou.evernote.homepage.MultipleStatusView
        android:id="@+id/main_multiplestatusview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <ListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/homepage_header_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="哈哈哈"
            android:background="#49bc49"/>

    </com.lanou.evernote.homepage.MultipleStatusView>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/main_fab_menu"
        style="@style/FabMenu"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/activity_vertical_margin"
        app:menu_colorNormal="#14b346"
        app:menu_colorPressed="#68f1a8"
        app:menu_colorRipple="#ed0862"
        app:menu_fab_label="文字笔记"
        app:menu_labels_ellipsize="end"
        app:menu_labels_singleLine="true">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/main_fab_camrea"
            style="@style/FabMenu.Buttons"
            android:src="@mipmap/large_ic_camera"
            app:fab_label="拍照" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/main_fab_accessory"
            style="@style/FabMenu.Buttons"
            android:src="@mipmap/large_ic_attachment"
            app:fab_label="附件" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/main_fab_chat"
            style="@style/FabMenu.Buttons"
            app:fab_label="工作群聊"
            android:src="@mipmap/notechat"
            />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/main_fab_no_remind"
            style="@style/FabMenu.Buttons"
            android:src="@mipmap/ic_reminder"
            app:fab_label="提醒" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/main_fab_sprit"
            style="@style/FabMenu.Buttons"
            android:src="@mipmap/large_ic_handwriting"
            app:fab_label="手写" />

    </com.github.clans.fab.FloatingActionMenu>


</RelativeLayout>
