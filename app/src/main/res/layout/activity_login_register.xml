<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="290dp"
    android:background="@mipmap/impression_note"/>
<android.support.design.widget.TabLayout
    android:id="@+id/login_register_tabLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorLoginTabLayout"
    app:tabSelectedTextColor="@android:color/white"
    app:tabTextColor="@color/colorTab"
    app:tabIndicatorColor="@color/colorSelectedTabIndicator"
    app:tabIndicatorHeight="3dp"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/login_register_viewPager"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/zero_dp"
        android:layout_weight="1"/>
</LinearLayout>